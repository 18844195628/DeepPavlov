{
  "dataset_reader": {
    "name": "file_paths_reader",
    "data_path": "elmo-1b-benchmark_test/data/1-billion-word-language-modeling-benchmark-r13output/",
    "train": "heldout-monolingual.tokenized.shuffled/news.en.heldout-00001-of-00050",
    "test": "heldout-monolingual.tokenized.shuffled/news.en.heldout-00002-of-00050",
    "valid": "heldout-monolingual.tokenized.shuffled/news.en.heldout-00003-of-00050"
  },
  "dataset_iterator": {
    "name": "elmo_file_paths_iterator",
    "seed": 31415,
    "unroll_steps": 20,
    "n_gpus": 1,
    "shuffle": false
  },
  "chainer": {
    "in": [
      "tokens"
    ],
    "in_y": [
      "_"
    ],
    "pipe": [
      {
        "in": ["tokens"],
        "name": "str_token_reverser",
        "tokenized": true,
        "out": ["reversed_tokens"]
      },
      {
        "in": ["tokens"],
        "name": "str_utf8_encoder",
        "max_word_length": 50,
        "pad_special_char_use": true,
        "word_boundary_special_char_use": true,
        "sentence_boundary_special_char_use": false,
        "reversed_sentense_tokens": false,
        "bos":"<S>",
        "eos":"</S>",
        "save_path": "elmo-1b-benchmark_test/data/vocab-2016-09-10.txt",
        "load_path":"elmo-1b-benchmark_test/data/vocab-2016-09-10.txt",
        "out": ["x_char_ids"]
      },
      {
        "in": ["reversed_tokens"],
        "name": "str_utf8_encoder",
        "max_word_length": 50,
        "pad_special_char_use": true,
        "word_boundary_special_char_use": true,
        "sentence_boundary_special_char_use": false,
        "reversed_sentense_tokens": true,
        "bos":"<S>",
        "eos":"</S>",
        "save_path": "elmo-1b-benchmark_test/data/vocab-2016-09-10.txt",
        "load_path":"elmo-1b-benchmark_test/data/vocab-2016-09-10.txt",
        "out": ["reversed_x_char_ids"]
      },
      {
        "in": ["tokens"],
        "name": "freq_drop_load_vocab",
        "min_freq": 2,
        "special_tokens": ["</S>", "<S>", "<UNK>"],
        "unk_token": "<UNK>",
        "save_path": "elmo-1b-benchmark_test/data/vocab-2016-09-10.txt",
        "load_path": "elmo-1b-benchmark_test/data/vocab-2016-09-10.txt",
        "out": ["y_token_ids"]
      },
      {
        "in": ["reversed_tokens"],
        "name": "freq_drop_load_vocab",
        "min_freq": 2,
        "special_tokens": ["</S>", "<S>", "<UNK>"],
        "unk_token": "<UNK>",
        "save_path": "elmo-1b-benchmark_test/data/vocab-2016-09-10.txt",
        "load_path": "elmo-1b-benchmark_test/data/vocab-2016-09-10.txt",
        "out": ["reversed_y_token_ids"]
      },
      {
        "name": "elmo_model",
        "options_json_path": "elmo-1b-benchmark_test/options.json",
        "unroll_steps": 20,
        "batch_size": 128,
        "save_path": "elmo-1b-benchmark_test/ckpts/current_skpt/model",
        "load_path": "elmo-1b-benchmark_test/ckpts/current_skpt/model",
        "in": ["x_char_ids", "reversed_x_char_ids", "y_token_ids", "reversed_y_token_ids"],
        "in_y": [],
        "n_gpus": 1,
        "out": ["loss"]
      }
    ],
   "out": [
    "x_char_ids",
    "y_token_ids"
  ]
  },
  "train": {
    "epochs": 1,
    "batch_size": 128,
    "log_every_n_batches": 5,
    "val_every_n_epochs": 1,
    "validation_patience": 4,
    "metric_optimization": "minimize",
    "metrics": [
      {
        "name": "elmo_loss2ppl",
        "inputs": ["loss"]
      }
    ],
    "tensorboard_log_dir": "elmo-1b-benchmark_test/logs"
  },
  "metadata": {
    "requirements": [
      "../dp_requirements/tf.txt"
    ],
    "download": [
      "http://files.deeppavlov.ai/deeppavlov_data/elmo-1b-benchmark_test.tar.gz"
    ]
  }
}
