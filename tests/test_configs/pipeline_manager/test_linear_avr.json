{
  "dataset_reader": {
    "name": "basic_classification_reader",
    "x": "text",
    "y": "target",
    "data_path": "sber_faq"
  },
  "dataset_iterator": {
    "name": "basic_classification_iterator",
    "seed": 42
  },
  "chainer": {
    "in": "x",
    "in_y": "y",
    "pipe": [
            [
        {
          "id": "classes_vocab",
          "name": "default_vocab",
          "fit_on": "y",
          "level": "token",
          "save_path": "vocabs/sber_classes.dict",
          "load_path": "vocabs/sber_classes.dict",
          "component_name": "Vocab of classes"
        }
      ],
      [
        {
          "in": "x",
          "name": "ru_tokenizer",
          "id": "ru_tok",
          "out": "x_tok",
          "component_name": "Ru tokenizer"
        }
      ],
      [
        {
          "in": "x_tok",
          "out": "x_vec",
          "name": "glove",
          "save_path": "embeddings/sber_faq.txt",
          "load_path": "embeddings/sber_faq.txt",
          "dim": 100,
          "component_name": "Word2vec_100"
        }
      ],
      [
        {
          "in": "x_vec",
          "out": "avr_x",
          "name": "avr_emb",
          "id": "tf-idf_average",
          "component_name": "Simple_avr"
        }
      ],
      [
        {
          "in": "avr_x",
          "fit_on": ["avr_x", "y"],
          "out": "y_labels",
          "name": "support_vector_classifier",
          "main": true,
          "save_path": "new_sber/checkpoints/svm.pkl",
          "load_path": "new_sber/checkpoints/svm.pkl",
          "component_name": "SVC",
          "penalty": "l2",
          "loss": "squared_hinge",
          "dual": {"search_bool": true},
          "tol": {"search_range": [0.00001, 0.005]},
          "C": {"search_range": [0.5, 2.0]},
          "fit_intercept": {"search_bool": true},
          "class_weight": {"search_choice": [null, "balanced"]}
        }
      ]
    ],
    "out": "y_labels"
  },
  "train": {
    "metrics": [
      "simple_accuracy",
      "simple_f1_macro",
      "simple_f1_weighted"
    ],
    "validation_patience": 5,
    "val_every_n_epochs": 5,
    "log_every_n_epochs": 1,
    "show_examples": false,
    "validate_best": true,
    "test_best": true
  },
  "metadata": {
    "requirements": [
      "../dp_requirements/tf.txt",
      "../dp_requirements/gensim.txt"
    ],
    "download": [
      {
        "url": "http://files.deeppavlov.ai/datasets/sber_faq.zip",
        "subdir": "sber_faq"
      },
      {
        "url": "http://files.deeppavlov.ai/deeppavlov_data/embeddings/sber_faq.txt",
        "subdir": "embeddings"
      }
    ]
  }
}
