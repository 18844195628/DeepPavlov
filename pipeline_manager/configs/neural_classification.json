          "lear_rate_decay": {"random_choice": [0.0, 0.1]},
          "text_size": 20,
          "model_name": "dcnn_model",
          "kernel_sizes_cnn": [1, 2, 3],
          "filters_cnn": {"random_choice": [[64, 64, 64], [64, 128, 256], [128, 128, 256]]},
          "dense_size": {"random_range": [128, 256], "discrete": true},
          "coef_reg_cnn": {"random_range": [1e-5, 1e-3], "scale": "log"},
          "coef_reg_den": {"random_range": [1e-5, 1e-3], "scale": "log"},
