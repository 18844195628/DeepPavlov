        }
      ],
      [
        {
          "in": ["x_vec"],
          "in_y": ["y_onehot"],
          "out": ["y_pred_probas"],
          "main": true,
          "name": "keras_classification_model",
          "component_name": "CNN",
          "save_path": "new_neural/checkpoints/cnn",
          "n_classes": "#classes_vocab.len",
          "embedding_size": "#embedder.dim",
          "loss": "categorical_crossentropy",
          "optimizer": "Adam",
          "confident_threshold": 1.0,
