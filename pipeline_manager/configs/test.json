{
  "dataset_reader": {
    "name": "basic_classification_reader",
    "data_path": "rb_0927",
    "x": "Text",
    "y": "theme",
    "train": "train_final.csv",
    "valid": "valid_final.csv",
    "test": "test_final.csv"
  },
  "dataset_iterator": {
    "name": "basic_classification_iterator"
  },
  "chainer": {
    "in": ["x"],
    "in_y": ["y"],
    "pipe": [
      [
        {
          "in": ["y"],
          "out": ["y_ids"],
          "fit_on": ["y"],
          "name": "simple_vocab",
          "component_name": "Vocab of classes",
          "id": "classes_vocab",
          "level": "token",
          "save_path": "vocabs/sber_classes.dict",
          "load_path": "vocabs/sber_classes.dict"
        }
      ],
      [
        {
          "in": ["x"],
          "out": ["x_vec"],
          "fit_on": ["x"],
          "name": "sklearn_component",
          "component_name": "tf-idf",
          "id": "tfidf_vec",
          "save_path": "vocabs/tfidf_sber.pkl",
          "load_path": "vocabs/tfidf_sber.pkl",
          "model_class": "sklearn.feature_extraction.text:TfidfVectorizer",
          "infer_method": "transform",
          "lowercase": true,
          "analyzer": "char",
          "ngram_range": [1, 5],
          "max_features": 10000,
          "norm": null
        },
        {
          "in": ["x"],
          "out": ["x_vec"],
          "fit_on": ["x"],
          "name": "sklearn_component",
          "component_name": "count",
          "id": "count",
          "save_path": "vocabs/count.pkl",
          "load_path": "vocabs/count.pkl",
          "model_class": "sklearn.feature_extraction.text:CountVectorizer",
          "infer_method": "transform",
          "lowercase": true,
          "analyzer": "char",
          "ngram_range": [1, 5],
          "max_features": 10000,
          "norm": null
        }
      ],
      [
        {
          "in": ["x_vec"],
          "out": ["y_pred_probas"],
          "fit_on": ["x_vec", "y_ids"],
          "name": "sklearn_component",
          "component_name": "Log Reg",
          "main": true,
          "save_path": "linm/checkpoints/logreg.pkl",
          "load_path": "linm/checkpoints/logreg.pkl",
          "model_class": "sklearn.linear_model:LogisticRegression",
          "infer_method": "predict_proba",
          "warm_start": false,
          "penalty": "l1",
          "dual": false,
          "C": {"search_range": [0.01, 2.0]},
          "class_weight": null,
          "solver": "liblinear"
        }
      ],
      [
        {
          "in": ["y_pred_probas"],
          "out": ["y_pred_ids"],
          "name": "proba2labels",
          "component_name": "prob2ind",
          "max_proba": true
        }
      ],
      [
        {
          "in": ["y_pred_ids"],
          "out": ["y_pred_labels"],
          "component_name": "vocab",
          "ref": "classes_vocab"
        }
      ]
    ],
    "out": ["y_pred_labels"]
  },
  "train": {
    "metrics": [
      {
        "name": "f1_macro",
        "inputs": ["y", "y_pred_labels"]
      },
      {
        "name": "sets_accuracy",
        "inputs": ["y", "y_pred_labels"]
      },
      {
        "name": "f1_weighted",
        "inputs": ["y", "y_pred_labels"]
      }
    ],
    "show_examples": false,
    "validate_best": true,
    "test_best": true
  },
  "enumerate": {
    "exp_name": "test_new",
    "root": "./download/experiments/",
    "do_test": true,
    "sample_num": 2,
    "plot": true,
    "save_best": true,
    "multiprocessing": true,
    "max_num_workers": 4,
    "use_all_gpus": false,
    "use_multi_gpus": null,
    "gpu_memory_fraction": 1.0
  }
}