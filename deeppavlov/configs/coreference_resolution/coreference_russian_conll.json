{
  "dataset_reader": {
    "class_name": "coreference_reader",
    "data_path": "{DOWNLOADS_PATH}/rucor_conll"
  },
  "dataset_iterator": {
    "class_name": "coreference_iterator"
  },
  "chainer": {
    "in": [
      "x"
    ],
    "in_y": [
      "y"
    ],
    "pipe": [
      {
        "in": ["x"],
        "in_y": ["y"],
        "out": ["y_pred"],
        "main": true,
        "class_name": "coref_model",
        "save_path": "{DOWNLOADS_PATH}/coreference_resolution/checkpoints/new_model",
        "load_path": "{DOWNLOADS_PATH}/coreference_resolution/checkpoints/new_model",
        "model_file": "{MODELS_PATH}",
        "char_vocab_path": "{DOWNLOADS_PATH}/vocabs/char_vocab.russian.txt",
        "embedding_path": "{DOWNLOADS_PATH}/embeddings/ft_0.8.3_nltk_yalen_sg_300.bin",
        "embedding_size": 300,
        "emb_format": "bin",
        "train_on_gold": true
      }
    ],
    "out": ["y_pred"]
  },
  "train": {
    "epochs": 20,
    "batch_size": 1,
    "metrics": [
      {
        "name": "coref_f1",
        "inputs": ["y", "y_pred"]
      }
    ],
    "validation_patience": 5,
    "val_every_n_epochs": 5,
    "log_every_n_epochs": 1,
    "show_examples": false,
    "validate_best": true,
    "test_best": true
  },
  "metadata": {
    "variables": {
      "ROOT_PATH": "/home/mks/projects/DeepPavlov",
      "DOWNLOADS_PATH": "{ROOT_PATH}/download",
      "MODELS_PATH": "{ROOT_PATH}/deeppavlov/models/coreference_resolution/"
    },
    "requirements": [
      "{DEEPPAVLOV_PATH}/requirements/tf.txt",
      "{DEEPPAVLOV_PATH}/requirements/fasttext.txt"
    ],
    "download": [
      {
        "url": "http://files.deeppavlov.ai/datasets/snips_intents/train.csv",
        "subdir": "{DOWNLOADS_PATH}/snips"
      },
      {
        "url": "http://files.deeppavlov.ai/deeppavlov_data/embeddings/wiki.en.bin",
        "subdir": "{DOWNLOADS_PATH}/embeddings"
      },
      {
        "url": "http://files.deeppavlov.ai/deeppavlov_data/classifiers/intents_snips_v8.tar.gz",
        "subdir": "{MODELS_PATH}/classifiers"
      }
    ]
  }
}
