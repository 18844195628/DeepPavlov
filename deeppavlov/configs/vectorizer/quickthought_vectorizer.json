{
      "dataset_reader": {
        "class_name": "file_paths_reader",
        "data_path": "/data/language_modeling/wikitext_ru/sentences",
        "train": "train_shards/*",
        "valid": "valid_small.txt"
      },
      "dataset_iterator": {
        "class_name": "quickthought_iterator",
        "seed": 243,
        "batch_size": 1024,
        "shuffle": false
      },
      "chainer": {
        "in": ["x"],
        "in_y": ["y"],
        "pipe": [
          {
            "id": "preproc",
            "class_name": "siamese_preprocessor",
            "use_matrix": false,
            "num_ranking_samples": 1,
            "max_sequence_length": 64,
            "in": ["x"],
            "out": ["x_proc"],
            "sent_vocab":
            {
              "id": "siam_sent_vocab",
              "class_name":"simple_vocab",
              "save_path": "{MODEL_PATH}/vocabs/sent.dict",
              "load_path": "{MODEL_PATH}/vocabs/sent.dict"
            },
            "tokenizer":
            {
              "class_name": "split_tokenizer"
            },
            "vocab":
            {
              "id": "siam_vocab",
              "class_name":"simple_vocab",
              "save_path": "{MODEL_PATH}/vocabs/tok.dict",
              "load_path": "{MODEL_PATH}/vocabs/tok.dict"
            },
            "embedder":
            {
              "id": "siam_embedder",
              "class_name": "fasttext",
              "load_path": "/data/embeddings/lenta_lower_100.bin"
            }
          },
          {
            "id": "embeddings",
            "class_name": "emb_mat_assembler",
            "embedder": "#siam_embedder",
            "vocab": "#siam_vocab"
          },
          {
            "in": ["x_proc"],
            "in_y": ["y"],
            "out": ["y_predicted"],
            "class_name": "bilstm_nn",
            "len_vocab": "#siam_vocab.len",
            "use_matrix": "#preproc.use_matrix",
            "max_sequence_length": "#preproc.max_sequence_length",
            "emb_matrix": "#embeddings.emb_mat",
            "embedding_dim": "#siam_embedder.dim",
            "seed": 243,
            "reccurent": "bilstm",
            "max_pooling": true,
            "shared_weights": true,
            "hidden_dim": 300,
            "learning_rate": 1e-3,
            "triplet_loss": false,
            "hard_triplets": false,
            "margin": 0.1,
            "batch_size": 1024,
            "save_path": "{MODEL_PATH}/model_weights.h5",
            "load_path": "{MODEL_PATH}/model_weights.h5",
            "preprocess": "#preproc.__call__"
          }
        ],
        "out": ["y_predicted"]
      },
      "train": {
        "epochs": 10,
        "batch_size": 1024,
        "pytest_max_batches": 2,
        "train_metrics": [],
        "metrics": ["f1", "acc", "log_loss"],
        "validation_patience": 100,
        "val_every_n_epochs": 1,
        "val_every_n_batches": 100,
        "log_every_n_batches": 10,
        "tensorboard_log_dir": "{MODEL_PATH}/runs/Dec4_1"
      },
      "metadata": {
        "variables": {
          "DOWNLOADS_PATH": "{ROOT_PATH}/downloads",
          "MODELS_PATH": "/data/pretrained/deeppavlov_models",
          "MODEL_PATH": "{MODELS_PATH}/quickthought_elmo"
        },
        "requirements": [
          "{DEEPPAVLOV_PATH}/dp_requirements/tf.txt",
          "{DEEPPAVLOV_PATH}/dp_requirements/gensim.txt"
        ],
        "download": [
          {
            "url": "http://files.deeppavlov.ai/deeppavlov_data/elmo_ru-wiki_600k_steps.tar.gz",
            "subdir": "embeddings"
          }
        ]
      }
    }
