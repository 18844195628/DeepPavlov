{
      "dataset_reader": {
        "name": "file_paths_reader",
        "data_path": "/cephfs/home/lyalin/data/wikitext_ru",
        "train": "train_shards/*",
        "valid": "valid_small.txt"
      },
      "dataset_iterator": {
        "name": "quickthought_iterator",
        "seed": 243,
	"batch_size": 512 
      },
      "chainer": {
        "in": ["x"],
        "in_y": ["y"],
        "pipe": [
          {
            "id": "preproc",
            "name": "siamese_preprocessor",
            "use_matrix": false,
            "num_ranking_samples": 5,
            "max_sequence_length": 64,
            "in": ["x"],
            "out": ["x_proc"],
            "sent_vocab":
            {
              "id": "siam_sent_vocab",
              "name":"simple_vocab",
              "save_path": "insurance_vocabs/sent.dict",
              "load_path": "insurance_vocabs/sent.dict"
            },
            "tokenizer":
            {
              "name": "split_tokenizer"
            },
            "vocab":
            {
              "id": "siam_vocab",
              "name":"simple_vocab",
              "save_path": "insurance_vocabs/tok.dict",
              "load_path": "insurance_vocabs/tok.dict"
            },
            "embedder":
            {
              "id": "siam_embedder",
              "name": "fasttext",
              "load_path": "embeddings/wiki.ru.bin"
            }
          },
          {
            "id": "embeddings",
            "name": "emb_mat_assembler",
            "embedder": "#siam_embedder",
            "vocab": "#siam_vocab"
          },
          {
            "in": ["x_proc"],
            "in_y": ["y"],
            "out": ["y_predicted"],
            "name": "bilstm_nn",
            "len_vocab": "#siam_vocab.len",
            "use_matrix": "#preproc.use_matrix",
            "max_sequence_length": "#preproc.max_sequence_length",
            "emb_matrix": "#embeddings.emb_mat",
            "embedding_dim": "#siam_embedder.dim",
            "seed": 243,
            "reccurent": "bilstm",
            "max_pooling": true,
            "shared_weights": true,
            "hidden_dim": 300,
            "learning_rate": 1e-3,
            "triplet_loss": true,
            "hard_triplets": false,
            "margin": 0.1,
            "batch_size": 512,
            "save_path": "quickthought/model_weights.h5",
            "load_path": "quickthought/model_weights.h5",
            "preprocess": "#preproc.__call__"
          }
        ],
        "out": ["y_predicted"]
      },
      "train": {
        "epochs": 10,
        "batch_size": 256,
        "pytest_max_batches": 2,
        "train_metrics": [],
        "metrics": ["f1", "acc", "log_loss"],
        "validation_patience": 5,
        "val_every_n_epochs": 5,
        "log_every_n_batches": 24,
        "tensorboard_log_dir": "runs"
      },
      "metadata": {
        "requirements": [
          "../dp_requirements/tf.txt",
          "../dp_requirements/gensim.txt"
        ],
        "download": [
          {
            "url": "http://files.deeppavlov.ai/deeppavlov_data/embeddings/wiki.ru.bin",
            "subdir": "embeddings"
          }
        ]
      }

    }
