{
  "dataset_reader": {
    "name": "basic_dataset_reader",
    "data_path": "./rus-eng",
    "train": "rus.txt",
    "sep": "\t",
    "header": null,
    "names": ["eng", "rus"],
    "x": "eng",
    "y": "rus"
  },
  "dataset_iterator": {
    "name": "basic_classification_iterator",
    "seed": 42,
    "split_seed": 23,
    "field_to_split": "train",
    "split_fields": [
      "train",
      "valid",
      "test"
    ],
    "split_proportions": [
      0.8,
      0.1,
      0.1
    ]
  },
  "chainer": {
    "in": [
      "x"
    ],
    "in_y": [
      "y"
    ],
    "pipe": [
      {
        "in": "x",
        "out": "x_prep",
        "id": "my_preprocessor",
        "name": "str_lower"
      },
      {
        "in": "x_prep",
        "id": "x_chars_vocab",
        "name": "simple_vocab",
        "pad_with_zeros": false,
        "fit_on": [
          "x_prep"
        ],
        "save_path": "seq2seq/rus-eng/x_chars.dict",
        "load_path": "seq2seq/rus-eng/x_chars.dict",
        "special_tokens": [
          "<UNK>",
          "<PAD>"
        ],
        "min_freq": 50,
        "out": "x_chars_ind"
      },
      {
        "in": "y",
        "out": "y_prep",
        "ref": "my_preprocessor"
      },
      {
        "in": "y_prep",
        "id": "y_chars_vocab",
        "name": "simple_vocab",
        "pad_with_zeros": false,
        "special_tokens": [
          "<UNK>",
          "<SOS>",
          "<EOS>",
          "<PAD>"
        ],
        "fit_on": [
          "y_prep"
        ],
        "save_path": "seq2seq/rus-eng/y_chars.dict",
        "load_path": "seq2seq/rus-eng/y_chars.dict",
        "min_freq": 50,
        "out": "y_chars_ind"
      },
      {
        "in": "x_chars_ind",
        "in_y": "y_chars_ind",
        "out": "y_chars_ind_pred",
        "main": true,
        "name": "keras_seq2seq_char_model",
        "save_path": "seq2seq/rus-eng/char_lstm_lstm_model_v0",
        "load_path": "seq2seq/rus-eng/char_lstm_lstm_model_v0",
        "encoder_embedding_size": 100,
        "decoder_embedding_size": 100,
        "source_vocab_size": "#x_chars_vocab.__len__()",
        "target_vocab_size": "#y_chars_vocab.__len__()",
        "source_padding_index": "#x_chars_vocab.__getitem__('<PAD>')",
        "target_padding_index": "#y_chars_vocab.__getitem__('<PAD>')",
        "target_start_of_sequence_index": "#y_chars_vocab.__getitem__('<SOS>')",
        "target_end_of_sequence_index": "#y_chars_vocab.__getitem__('<EOS>')",
        "source_max_length": 50,
        "target_max_length": 50,
        "decoder_vocab": "#y_chars_vocab",
        "optimizer": "RMSprop",
        "lear_rate": 0.001,
        "lear_rate_decay": 0.0001,
        "loss": "categorical_crossentropy",
        "hidden_size": 128,
        "model_name": "gru_gru_model"
      },
      {
        "ref": "y_chars_vocab",
        "in": "y_chars_ind_pred",
        "out": "y_pred_chars"
      },
      {
        "name": "char_connector",
        "in": "y_pred_chars",
        "out": "y_texts"
      }
    ],
    "out": "y_texts"
  },
  "train": {
    "epochs": 10,
    "batch_size": 64,
    "metrics": [
      "bleu",
      "per_token_accuracy"
    ],
    "validation_patience": 5,
    "val_every_n_epochs": 1,
    "log_every_n_epochs": 1,
    "show_examples": true,
    "validate_best": true,
    "test_best": false
  },
  "metadata": {
    "requirements": [
      "../dp_requirements/tf.txt",
      "../dp_requirements/fasttext.txt"
    ],
    "download": [
      "http://files.deeppavlov.ai/datasets/rus-eng.tar.gz"
    ]
  }
}
