{
  "dataset_reader": {
    "name": "file_paths_reader",
    "data_path": "elmo/oil-gas_elmo/data",
    "train": "train/*",
    "test": "held-out/*"
  },
  "dataset_iterator": {
    "name": "elmo_file_paths_iterator",
    "seed": 31415,
    "shuffle": false
  },
  "chainer": {
    "in": [
      "sentences"
    ],
    "in_y": [
      "_"
    ],
    "pipe": [
      {
        "in": ["sentences"],
        "name": "str_token_reverser",
        "tokenized": false,
        "out": ["reversed_sentences"]
      },
      {
        "in": ["sentences"],
        "name": "str_utf8_encoder",
        "max_word_length": 50,
        "split": true,
        "pad_special_char_use": true,
        "word_boundary_special_char_use": true,
        "sentence_boundary_special_char_use": true,
        "reversed_sentense_tokens": false,
        "load_path":"elmo/oil-gas_elmo/data/tokens_set.txt",
        "save_path":"elmo/oil-gas_elmo/data/tokens_set1.txt",
        "out": ["x_char_ids"]
      },
      {
        "in": ["reversed_sentences"],
        "name": "str_utf8_encoder",
        "max_word_length": 50,
        "split": true,
        "pad_special_char_use": true,
        "word_boundary_special_char_use": true,
        "sentence_boundary_special_char_use": true,
        "reversed_sentense_tokens": true,
        "load_path":"elmo/oil-gas_elmo/data/tokens_set.txt",
        "save_path":"elmo/oil-gas_elmo/data/tokens_set1.txt",
        "out": ["reversed_x_char_ids"]
      },
      {
        "in": ["sentences"],
        "name": "elmo_str_spec_tokens_wrapper",
        "bos":"<S>",
        "eos":"</S>",
        "reverse":false,
        "tokenized":false,
        "out": ["sentences"]
      },
      {
        "in": ["reversed_sentences"],
        "name": "elmo_str_spec_tokens_wrapper",
        "bos":"<S>",
        "eos":"</S>",
        "reverse":true,
        "tokenized":false,
        "out": ["reversed_sentences"]
      },
      {
        "in": ["sentences"],
        "name": "split_tokenizer",
        "out": ["tokens"]
      },
      {
        "in": ["tokens"],
        "name": "freq_drop_load_vocab",
        "min_freq": 2,
        "special_tokens": ["</S>", "<S>", "<UNK>"],
        "unk_token": "<UNK>",
        "save_path": "elmo/oil-gas_elmo/data/tokens_set1.txt",
        "load_path": "elmo/oil-gas_elmo/data/tokens_set.txt",
        "out": ["y_token_ids"]
      },
      {
        "in": ["reversed_sentences"],
        "name": "split_tokenizer",
        "out": ["reversed_tokens"]
      },
      {
        "in": ["reversed_tokens"],
        "name": "freq_drop_load_vocab",
        "min_freq": 2,
        "special_tokens": ["</S>", "<S>", "<UNK>"],
        "unk_token": "<UNK>",
        "save_path": "elmo/oil-gas_elmo/data/tokens_set1.txt",
        "load_path": "elmo/oil-gas_elmo/data/tokens_set.txt",
        "out": ["reversed_y_token_ids"]
      },
      {
        "in": ["x_char_ids", "reversed_x_char_ids", "y_token_ids", "reversed_y_token_ids"],
        "name": "elmo_preprocessor",
        "batch_size": 128, 
        "unroll_steps": 20, 
        "n_gpus": 1, 

        "out": ["pack_x_char_ids", "pack_reversed_x_char_ids", "pack_y_token_ids", "pack_reversed_y_token_ids"]
      },
      {
        "name": "elmo_model",
        "id": "elmo",
        "options_json_path": "elmo/options.json",
        "unroll_steps": 20,
        "batch_size": 128,
        "in": ["pack_x_char_ids", "pack_reversed_x_char_ids"],
        "in_y": ["pack_y_token_ids", "pack_reversed_y_token_ids"],
        "out": ["loss"]
      }
    ],
    "out1": [
      "sentences",
      "reversed_sentences",
      "x_char_ids",
      "reversed_x_char_ids",
      "tokens",
      "reversed_tokens",
      "y_token_ids"
    ],
    "out": [
      "pack_x_char_ids",
      "pack_reversed_x_char_ids",
      "pack_y_token_ids",
      "pack_reversed_y_token_ids"

   ]
  },
  "train": {
    "epochs": 100,
    "batch_size": 128
  },
  "metadata": {
    "requirements": [
      "../dp_requirements/tf.txt",
      "../dp_requirements/fasttext.txt"
    ],
    "labels": {
      "telegram_utils": "IntentModel",
      "server_utils": "KerasIntentModel"
    },
    "download": [
      "http://files.deeppavlov.ai/deeppavlov_data/vocabs.tar.gz",
      "http://files.deeppavlov.ai/deeppavlov_data/classifiers.tar.gz",
      {
        "url": "https://github.com/text-machine-lab/rusentiment/raw/master/Dataset/rusentiment_random_posts.csv",
        "subdir": "rusentiment"
      },
      {
        "url": "https://github.com/text-machine-lab/rusentiment/raw/master/Dataset/rusentiment_test.csv",
        "subdir": "rusentiment"
      },
      {
        "url": "http://files.deeppavlov.ai/embeddings/ft_native_300_ru_wiki_lenta_nltk_wordpunct_tokenize/ft_native_300_ru_wiki_lenta_nltk_wordpunct_tokenize.bin",
        "subdir": "embeddings"
      }
    ]
  }
}
