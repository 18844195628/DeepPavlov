{
  "dataset_reader": {
    "name": "basic_classification_reader",
    "data_path": "rb_0927",
    "x": "Text",
    "y": "theme",
    "train": "train_final.csv",
    "valid": "valid_final.csv",
    "test": "test_final.csv"
  },
  "dataset_iterator": {
    "name": "basic_classification_iterator"
  },
  "chainer": {
    "in": [
      "x"
    ],
    "in_y": [
      "y"
    ],
    "pipe": [
      [
        {
          "in": "y",
          "out": "y_ids",
          "fit_on": ["y"],
          "name": "simple_vocab",
          "component_name": "Vocab of classes",
          "id": "classes_vocab",
          "level": "token",
          "save_path": "vocabs/sber_classes.dict",
          "load_path": "vocabs/sber_classes.dict"
        }
      ],
      [
        {
          "in": ["x"],
          "out": ["x_tok"],
          "name": "ru_tokenizer",
          "component_name": "Ru tokenizer"
        }
      ],
      [
        {
          "in": ["x_tok"],
          "out": ["x_vec"],
          "name": "elmo",
          "component_name": "ELMO_1024_7",
          "elmo_output_names": ["default"],
          "mini_batch_size": 32,
          "cache": true,
          "spec": "embeddings/sber-faq_epoches_n_7"
        }
      ],
      [
        {
          "in": ["x_vec"],
          "out": ["y_pred_probas"],
          "fit_on": ["x_vec", "y_ids"],
          "name": "sklearn_component",
          "component_name": "Log Reg",
          "main": true,
          "save_path": "linm/checkpoints/logreg.pkl",
          "load_path": "linm/checkpoints/logreg.pkl",
          "model_class": "sklearn.linear_model:LogisticRegression",
          "infer_method": "predict_proba",
          "warm_start": false,
          "penalty": "l1",
          "dual": false,
          "C": {"search_range": [0.01, 2.0]},
          "fit_intercept": {"search_bool": true},
          "class_weight": {"search_choice": [null, "balanced"]},
          "solver": {"search_choice": ["liblinear", "saga"]}
        },
        {
          "in": ["x_vec"],
          "out": ["y_pred_probas"],
          "fit_on": ["x_vec", "y_ids"],
          "name": "sklearn_component",
          "component_name": "Log Reg",
          "main": true,
          "save_path": "linm/checkpoints/logreg.pkl",
          "load_path": "linm/checkpoints/logreg.pkl",
          "model_class": "sklearn.linear_model:LogisticRegression",
          "infer_method": "predict_proba",
          "warm_start": false,
          "penalty": "l2",
          "dual": false,
          "C": {"search_range": [0.01, 2.0]},
          "fit_intercept": {"search_bool": true},
          "class_weight": {"search_choice": [null, "balanced"]},
          "solver": {"search_choice": ["lbfgs", "newton-cg"]}
        }
      ],
      [
        {
          "in": "y_pred_probas",
          "out": "y_pred_ids",
          "name": "proba2labels",
          "component_name": "prob2ind",
          "max_proba": true
        }
      ],
      [
        {
          "in": "y_pred_ids",
          "out": "y_pred_labels",
          "component_name": "vocab",
          "ref": "classes_vocab"
        }
      ]
      ],
    "out": ["y_pred_labels"]
  },
  "train": {
    "metrics": [
      {
        "name": "f1_macro",
        "inputs": ["y", "y_pred_labels"]
      },
      {
        "name": "sets_accuracy",
        "inputs": ["y", "y_pred_labels"]
      },
      {
        "name": "f1_weighted",
        "inputs": ["y", "y_pred_labels"]
      }
    ],
    "show_examples": false,
    "validate_best": true,
    "test_best": true
  },
  "enumerate": {
    "exp_name": "lin_avr_clf",
    "root": "./download/experiments/",
    "do_test": false,
    "cross_val": false,
    "k_fold": 5,
    "sample_num": 10,
    "target_metric": null,
    "plot": false,
    "save_best": false,
    "multiprocessing": true,
    "max_num_workers": null,
    "use_all_gpus": true,
    "use_multi_gpus": null,
    "gpu_memory_fraction": 1.0
  }
}
