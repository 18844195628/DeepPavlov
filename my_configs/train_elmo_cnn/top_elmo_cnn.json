{
  "dataset_reader": {
    "name": "basic_classification_reader",
    "x": "text",
    "y": "target",
    "data_path": "new_sber"
  },
  "dataset_iterator": {
    "name": "basic_classification_iterator",
    "seed": 42,
    "field_to_split": "train",
    "split_fields": ["train", "valid"],
    "split_proportions": [0.9, 0.1]
  },
  "chainer": {
    "in": ["x"],
    "in_y": ["y"],
    "pipe": [
      {
        "id": "classes_vocab",
        "name": "default_vocab",
        "fit_on": [
          "y"
        ],
        "level": "token",
        "save_path": "vocabs/unlem_classes.dict",
        "load_path": "vocabs/unlem_classes.dict"
      },
      {
        "in": "x",
        "out": "x_tok"
        "id": "my_tokenizer",
        "name": "ru_tokenizer"
      },
      {
        "in": ["x_tok"],
        "out": ["x_vec"],
        "name": "elmo",
        "id": "my_embedder",
        "spec": "embeddings/sber_erp_unlem_epoches_n_3",
      },
      {
        "in": ["x_vec"],
        "in_y": ["y"],
        "out": [
          "y_labels",
          "y_probas_dict"
        ],
        "main": true,
        "embedding_size": 1024,
        "name": "keras_classification_model",
        "save_path": "new_sber/checkpoints/cnn",
        "classes": "#classes_vocab.keys()",
        "confident_threshold": 1.0,
        "optimizer": "Adam",
        "lear_rate": 0.01,
        "lear_rate_decay": 0.0,
        "loss": "categorical_crossentropy",
        "text_size": 15,
        "model_name": "top_model"
      }
    ],
    "out": [
      "y_labels",
      "y_probas_dict"
    ]
  },
  "train": {
    "epochs": 40,
    "batch_size": 32,
    "metrics": [
      "classification_accuracy",
      "classification_f1",
      "classification_f1_weighted"
    ],
    "validation_patience": 5,
    "val_every_n_epochs": 20,
    "log_every_n_epochs": 5,
    "show_examples": false,
    "validate_best": true,
    "test_best": true
  },
  "metadata": {
    "requirements": [
      "../dp_requirements/tf.txt",
      "../dp_requirements/elmo.txt"
    ]
  }
}