{
  "dataset_reader": {
    "name": "basic_classification_reader",
    "x": "text",
    "y": "target",
    "data_path": "new_sber"
  },
  "dataset_iterator": {
    "name": "basic_classification_iterator",
    "seed": 42,
    "field_to_split": "train",
    "split_fields": ["train", "valid"],
    "split_proportions": [0.9, 0.1]
  },
  "chainer": {
    "in": ["x"],
    "in_y": ["y"],
    "pipe": [
      [
        {
          "id": "classes_vocab",
          "name": "default_vocab",
          "fit_on": ["y"],
          "level": "token",
          "save_path": "vocabs/sber_classes.dict",
          "load_path": "vocabs/sber_classes.dict",
          "component_name": "Vocab"
        }
      ],
      [
        {
          "in": ["x"],
          "name": "ru_tokenizer",
          "id": "ru_tok",
          "out": ["x_tok"],
          "component_name": "ru tokenizer"
        }
      ],
      [
        {
          "in": "x_tok",
          "out": "vec",
          "fit_on": ["x_tok"],
          "name": "tfidf_vectorizer",
          "id": "tf-idf",
          "save_path": "vocabs/tf-idf.pkl",
          "load_path": "vocabs/tf-idf.pkl",
          "component_name": "Sklearn tf-idf vectorizer"
        },
        {
          "in": "x_tok",
          "out": "vec",
          "fit_on": ["x_tok"],
          "name": "count_vectorizer",
          "id": "count",
          "save_path": "vocabs/count.pkl",
          "load_path": "vocabs/count.pkl",
          "component_name": "Sklearn count vectorizer"
        }
      ],
      [
        {
          "in": ["vec"],
          "fit_on": ["vec", "y"],
          "out": ["y_labels"],
          "name": "support_vector_classifier",
          "main": true,
          "save_path": "new_sber/checkpoints/svm.pkl",
          "load_path": "new_sber/checkpoints/svm.pkl",
          "component_name": "SVC",
          "penalty": "l2",
          "loss": "squared_hinge",
          "dual": [true, false],
          "tol": {"range": [0.00001, 0.005]},
          "C": {"range": [0.5, 2.0]},
          "fit_intercept": [true, false],
          "class_weight": [null, "balanced"]
        },
        {
          "in": ["vec"],
          "fit_on": ["vec", "y"],
          "out": ["y_labels"],
          "name": "support_vector_classifier",
          "main": true,
          "save_path": "new_sber/checkpoints/svm.pkl",
          "load_path": "new_sber/checkpoints/svm.pkl",
          "component_name": "SVC",
          "penalty": "l2",
          "loss": "hinge",
          "dual": true,
          "tol": {"range": [0.00001, 0.005]},
          "C": {"range": [0.5, 2.0]},
          "fit_intercept": [true, false],
          "class_weight": [null, "balanced"]
        },
        {
          "in": ["vec"],
          "fit_on": ["vec", "y"],
          "out": ["y_labels"],
          "name": "logistic_regression",
          "main": true,
          "save_path": "new_sber/checkpoints/logreg.pkl",
          "load_path": "new_sber/checkpoints/logreg.pkl",
          "component_name": "Log Reg",
          "penalty": "l1",
          "dual": false,
          "tol": {"range": [0.00001, 0.005]},
          "C": {"range": [0.5, 2.0]},
          "fit_intercept": [true, false],
          "class_weight": [null, "balanced"],
          "solver": ["liblinear", "saga"]
        },
        {
          "in": ["vec"],
          "fit_on": ["vec", "y"],
          "out": ["y_labels"],
          "name": "logistic_regression",
          "main": true,
          "save_path": "new_sber/checkpoints/logreg.pkl",
          "load_path": "new_sber/checkpoints/logreg.pkl",
          "component_name": "Log Reg",
          "penalty": "l2",
          "dual": false,
          "tol": {"range": [0.00001, 0.005]},
          "C": {"range": [0.5, 2.0]},
          "fit_intercept": [true, false],
          "class_weight": [null, "balanced"],
          "solver": ["lbfgs", "newton-cg"]
        },
        {
          "in": ["vec"],
          "fit_on": ["vec", "y"],
          "out": ["y_labels"],
          "name": "random_forest",
          "main": true,
          "save_path": "new_sber/checkpoints/rf.pkl",
          "load_path": "new_sber/checkpoints/rf.pkl",
          "component_name": "Random Forest",
          "n_estimators": {"range": [10, 100], "discrete": true},
          "min_samples_split": {"range": [2, 10], "discrete": true},
          "min_samples_leaf": {"range": [1, 5], "discrete": true},
          "min_weight_fraction_leaf": {"range": [0.0, 0.5]},
          "max_features": ["auto", "log2"],
          "min_impurity_split": null,
          "bootstrap": true,
          "oob_score": [false, true],
          "class_weight": [null, "balanced"]
        }
      ]
    ],
    "out": ["y_labels"]
  },
  "train": {
    "metrics": [
      "simple_accuracy",
      "simple_f1_macro",
      "simple_f1_weighted"
    ],
    "show_examples": false,
    "validate_best": true,
    "test_best": true
  }
}
