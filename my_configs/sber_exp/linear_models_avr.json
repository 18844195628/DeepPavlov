{
  "dataset_reader": {
    "name": "basic_classification_reader",
    "x": "text",
    "y": "target",
    "data_path": "new_sber"
  },
  "dataset_iterator": {
    "name": "basic_classification_iterator",
    "seed": 42,
    "field_to_split": "train",
    "split_fields": [
      "train",
      "valid"
    ],
    "split_proportions": [
      0.9,
      0.1
    ]
  },
  "chainer": {
    "in": [
      "x"
    ],
    "in_y": [
      "y"
    ],
    "pipe": [
      [
        {
          "id": "classes_vocab",
          "name": "default_vocab",
          "fit_on": ["y"],
          "level": "token",
          "save_path": "vocabs/sber_classes.dict",
          "load_path": "vocabs/sber_classes.dict",
          "component_name": "Vocab"
        }
      ],
      [
        {
          "in": ["x"],
          "name": "ru_tokenizer",
          "id": "ru_tok",
          "out": ["x_tok"],
          "component_name": "Ru tokenizer"
        }
      ],
      [
        {
          "fit_on": ["x_tok"],
          "name": "tfidf_vectorizer",
          "id": "tf-idf",
          "save_path": "vocabs/tf-idf.pkl",
          "load_path": "vocabs/tf-idf.pkl",
          "component_name": "Sklearn tf-idf vectorizer"
        }
      ],
      [
        {
          "in": ["x_tok"],
          "id": "my_embedder",
          "name": "fasttext",
          "save_path": "embeddings/ft_native_300_ru_wiki_lenta_nltk_word_tokenize.bin",
          "load_path": "embeddings/ft_native_300_ru_wiki_lenta_nltk_word_tokenize.bin",
          "dim": 300,
          "out": "x_vec",
          "component_name": "Fasttext embedder"
        }
      ],
      [
        {
          "in": ["x_vec", "x"],
          "out": "avr_x",
          "name": "avr_emb",
          "tokenizer": "#ru_tok",
          "vectorizer": "#tf-idf",
          "id": "tf-idf_average",
          "component_name": "avr_emb_sklearn"
        },
        {
          "in": ["x_vec", "x_tok"],
          "out": "avr_x",
          "id": "tf-idf_average",
          "name": "sent_emb_vocab",
          "vocab_path": "vocabs/counts_wiki_lenta.txt",
          "component_name": "avr_emb_vocab"
        },
        {
          "in": ["x_vec"],
          "out": "avr_x",
          "name": "avr_emb",
          "id": "tf-idf_average",
          "component_name": "simple_avr_emb"
        }
      ],
      [
        {
          "in": ["avr_x"],
          "fit_on": [["avr_x", "y"]],
          "out": ["y_labels"],
          "name": "logistic_regression",
          "main": true,
          "search": true,
          "save_path": "new_sber/checkpoints/logreg.pkl",
          "load_path": "new_sber/checkpoints/logreg.pkl",
          "component_name": "Log Reg",
          "penalty": "l1",
          "dual": false,
          "tol": {"range": [0.00001, 0.005]},
          "C": {"range": [0.5, 2.0]},
          "fit_intercept": [true, false],
          "class_weight": [null, "balanced"],
          "solver": ["liblinear", "saga"],
          "max_iter": {"range": [50, 1000]}
        },
        {
          "in": ["avr_x"],
          "fit_on": [["avr_x", "y"]],
          "out": ["y_labels"],
          "name": "logistic_regression",
          "main": true,
          "search": true,
          "save_path": "new_sber/checkpoints/logreg.pkl",
          "load_path": "new_sber/checkpoints/logreg.pkl",
          "component_name": "Log Reg",
          "penalty": "l2",
          "dual": false,
          "tol": {"range": [0.00001, 0.005]},
          "C": {"range": [0.5, 2.0]},
          "fit_intercept": [true, false],
          "class_weight": [null, "balanced"],
          "solver": ["lbfgs", "newton-cg"],
          "max_iter": {"range": [50, 1000]}
        }
      ]
    ],
    "out": ["y_labels"]
  },
  "train": {
    "metrics": [
      "simple_accuracy",
      "simple_f1_macro",
      "simple_f1_weighted"
    ],
    "show_examples": false,
    "validate_best": true,
    "test_best": true
  }
}
