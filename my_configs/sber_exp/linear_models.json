{
  "dataset_reader": {
    "name": "basic_classification_reader",
    "x": "text",
    "y": "target",
    "data_path": "new_sber"
  },
  "dataset_iterator": {
    "name": "basic_classification_iterator",
    "seed": 42,
    "field_to_split": "train",
    "split_fields": [
      "train",
      "valid"
    ],
    "split_proportions": [
      0.9,
      0.1
    ]
  },
  "chainer": {
    "in": ["x"],
    "in_y": ["y"],
    "search": true,
    "pipe": [
      [
        {
          "id": "classes_vocab",
          "name": "default_vocab",
          "fit_on": ["y"],
          "level": "token",
          "save_path": "vocabs/sber_classes.dict",
          "load_path": "vocabs/sber_classes.dict"
        }
      ],
      [
        {
          "in": ["x"],
          "name": "ru_tokenizer",
          "id": "ru_tok",
          "out": ["x_tok"]
        }
      ],
      [
        {
          "in": "x_tok",
          "out": "vec",
          "fit_on": ["x_tok"],
          "name": "tfidf_vectorizer",
          "id": "tf-idf",
          "save_path": "vocabs/tf-idf.pkl",
          "load_path": "vocabs/tf-idf.pkl"
        },
        {
          "in": "x_tok",
          "out": "vec",
          "fit_on": ["x_tok"],
          "name": "count_vectorizer",
          "id": "count",
          "save_path": "vocabs/count.pkl",
          "load_path": "vocabs/count.pkl"
        }
      ],
      [
        {
          "in": ["vec"],
          "fit_on": ["vec", "y"],
          "out": ["y_labels"],
          "name": "random_forest",
          "main": true,
          "save_path": "new_sber/checkpoints/rf.pkl",
          "load_path": "new_sber/checkpoints/rf.pkl"
        },
        {
          "in": ["vec"],
          "fit_on": ["vec", "y"],
          "out": ["y_labels"],
          "name": "support_vector_classifier",
          "main": true,
          "save_path": "new_sber/checkpoints/svm.pkl",
          "load_path": "new_sber/checkpoints/svm.pkl"
        },
        {
          "in": ["vec"],
          "fit_on": ["vec", "y"],
          "out": ["y_labels"],
          "name": "logistic_regression",
          "main": true,
          "save_path": "new_sber/checkpoints/lr.pkl",
          "load_path": "new_sber/checkpoints/lr.pkl"
        }
      ]
    ],
    "out": ["y_labels"]
  },
  "train": {
    "metrics": [
      "classification_accuracy",
      "classification_f1",
      "simple_f1_macro",
      "simple_f1_weighted"
    ],
    "validation_patience": 5,
    "val_every_n_epochs": 5,
    "log_every_n_epochs": 5,
    "show_examples": false,
    "validate_best": true,
    "test_best": true
  },
  "metadata": {
    "requirements": [
      "../dp_requirements/tf-gpu.txt",
      "../dp_requirements/fasttext.txt",
      "../dp_requirements/elmo.txt",
      "../dp_requirements/gensim.txt"
    ]
  }
}
