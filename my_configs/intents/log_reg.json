{
  "dataset_reader": {
    "name": "basic_classification_reader",
    "x": "text",
    "y": "intents",
    "data_path": "snips"
  },
  "dataset_iterator": {
    "name": "basic_classification_iterator",
    "seed": 42,
    "field_to_split": "train",
    "split_fields": [
      "train",
      "valid"
    ],
    "split_proportions": [
      0.9,
      0.1
    ]
  },
  "chainer": {
    "in": [
      "x"
    ],
    "in_y": [
      "y"
    ],
    "pipe": [
      {
        "id": "classes_vocab",
        "name": "default_vocab",
        "fit_on": [
          "y"
        ],
        "level": "token",
        "save_path": "vocabs/snips_classes.dict",
        "load_path": "vocabs/snips_classes.dict"
      },
      {
        "in": ["x"],
        "name": "nltk_tokenizer",
        "id": "nltk",
        "out": ["x_tok"]
      },
      {
        "fit_on": ["x_tok"],
        "name": "tfidf_vectorizer",
        "id": "tf-idf",
        "norm": "l2",
        "save_path": "snips/tf-idf.pkl",
        "load_path": "vocabs/tf-idf.pkl"
      },
      {
        "id": "fasttext",
        "name": "fasttext",
        "in": "x_tok",
        "save_path": "embeddings/dstc2_fastText_model.bin",
        "load_path": "embeddings/dstc2_fastText_model.bin",
        "out": "x_vec"
      },
      {
        "in": ["x_vec", "x"],
        "out": "avr_x",
        "name": "avr_emb",
        "tokenizer": "#nltk",
        "vectorizer": "#tf-idf",
        "id": "tf-idf_average"
      },
      {
        "in": [
          "avr_x"
        ],
        "fit_on": [
          "avr_x", "y"
        ],
        "out": [
          "y_labels"
        ],
        "name": "random_forest",
        "main": true,
        "n_estimators": 15,
        "save_path": "intents/rf.pkl",
        "load_path": "intents/rf.pkl"
      }
    ],
    "out": [
      "y_labels"
    ]
  },
  "train": {
    "metrics": [
      "simple_f1_macro",
      "simple_f1_weighted"
    ],
    "validation_patience": 5,
    "val_every_n_epochs": 5,
    "log_every_n_epochs": 5,
    "show_examples": false,
    "validate_best": true,
    "test_best": false
  },
  "metadata": {
    "requirements": [
      "../dp_requirements/tf.txt",
      "../dp_requirements/fasttext.txt"
    ],
    "labels": {
      "telegram_utils": "IntentModel",
      "server_utils": "KerasIntentModel"
    },
    "download": [
      "http://files.deeppavlov.ai/deeppavlov_data/intents.tar.gz",
      "http://files.deeppavlov.ai/deeppavlov_data/vocabs.tar.gz",
      {
        "url": "http://files.deeppavlov.ai/datasets/snips_intents/train.csv",
        "subdir": "snips"
      }
    ]
  }
}
