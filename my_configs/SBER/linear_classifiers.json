{
  "dataset_reader": {
    "name": "basic_classification_reader",
    "data_path": "rb_0927",
    "x": "Text",
    "y": "theme",
    "train": "rb_0927.csv"
  },
  "dataset_iterator": {
    "name": "basic_classification_iterator",
    "seed": 42,
    "field_to_split": "train",
    "split_fields": ["train", "valid"],
    "split_proportions": [0.8, 0.2]
  },
  "chainer": {
    "in": ["x"],
    "in_y": ["y"],
    "pipe": [
      [
        {
          "in": "y",
          "out": "y_ids",
          "fit_on": ["y"],
          "name": "simple_vocab",
          "component_name": "vocab",
          "id": "classes_vocab",
          "level": "token",
          "save_path": "vocabs/sber_classes.dict",
          "load_path": "vocabs/sber_classes.dict"

        }
      ],
      [
        {
          "in": ["x"],
          "out": ["x_vec"],
          "fit_on": ["x"],
          "name": "sklearn_component",
          "component_name": "tf-idf",
          "id": "tfidf_vec",
          "save_path": "vocabs/tfidf_sber.pkl",
          "load_path": "vocabs/tfidf_sber.pkl",
          "model_name": "sklearn.feature_extraction.text:TfidfVectorizer",
          "infer_method": "transform",
          "lowercase": true,
          "analyzer": "char",
          "ngram_range": [1, 5],
          "max_features": 10000,
          "norm": null
        },
        {
          "in": ["x"],
          "out": ["x_vec"],
          "fit_on": ["x"],
          "name": "sklearn_component",
          "component_name": "count",
          "id": "count",
          "save_path": "vocabs/count.pkl",
          "load_path": "vocabs/count.pkl",
          "model_name": "sklearn.feature_extraction.text:CountVectorizer",
          "infer_method": "transform",
          "lowercase": true,
          "analyzer": "char",
          "ngram_range": [1, 5],
          "max_features": 10000,
          "norm": null
        }
      ],
      [
        {
          "in": ["x_vec"],
          "out": ["y_pred_probas"],
          "fit_on": ["x_vec", "y_ids"],
          "name": "sklearn_component",
          "component_name": "Log Reg",
          "main": true,
          "save_path": "linm/checkpoints/logreg.pkl",
          "load_path": "linm/checkpoints/logreg.pkl",
          "model_name": "sklearn.linear_model:LogisticRegression",
          "infer_method": "predict_proba",
          "warm_start": false,
          "penalty": "l1",
          "dual": false,
          "C": {"search_range": [0.01, 2.0]},
          "fit_intercept": {"search_bool": true},
          "class_weight": {"search_choice": [null, "balanced"]},
          "solver": {"search_choice": ["liblinear", "saga"]}
        },
        {
          "in": ["x_vec"],
          "out": ["y_pred_probas"],
          "fit_on": ["x_vec", "y_ids"],
          "name": "sklearn_component",
          "component_name": "Log Reg",
          "main": true,
          "save_path": "linm/checkpoints/logreg.pkl",
          "load_path": "linm/checkpoints/logreg.pkl",
          "model_name": "sklearn.linear_model:LogisticRegression",
          "infer_method": "predict_proba",
          "warm_start": false,
          "penalty": "l2",
          "dual": false,
          "C": {"search_range": [0.01, 2.0]},
          "fit_intercept": {"search_bool": true},
          "class_weight": {"search_choice": [null, "balanced"]},
          "solver": {"search_choice": ["lbfgs", "newton-cg"]}
        }
      ],
      [
        {
          "in": "y_pred_probas",
          "out": "y_pred_ids",
          "name": "proba2labels",
          "component_name": "prob2ind",
          "max_proba": true
        }
      ],
      [
        {
          "in": "y_pred_ids",
          "out": "y_pred_labels",
          "component_name": "vocab",
          "ref": "classes_vocab"
        }
      ]
    ],
    "out": ["y_pred_labels"]
  },
  "train": {
    "metrics": [
      "simple_accuracy",
      "simple_f1_macro",
      "simple_f1_weighted"
    ],
    "show_examples": false,
    "validate_best": true,
    "test_best": false
  }
}
