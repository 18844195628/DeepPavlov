{
  "dataset_reader": {
    "name": "basic_classification_reader",
    "data_path": "rb_0927",
    "x": "Text",
    "y": "theme",
    "train": "rb_0927.csv"
  },
  "dataset_iterator": {
    "name": "basic_classification_iterator",
    "seed": 42,
    "field_to_split": "train",
    "split_fields": ["train", "valid"],
    "split_proportions": [0.8, 0.2]
  },
  "chainer": {
    "in": ["x"],
    "in_y": ["y"],
    "pipe": [
      {
        "id": "classes_vocab",
        "name": "simple_vocab",
        "fit_on": ["y"],
        "level": "token",
        "save_path": "vocabs/sber_classes.dict",
        "load_path": "vocabs/sber_classes.dict",
        "in": "y",
        "out": "y_ids"
      },
      {
        "in": ["x"],
        "out": ["x_vec"],
        "fit_on": ["x"],
        "id": "tfidf_vec",
        "name": "sklearn_component",
        "save_path": "snips/intents_snips_tfidf_v7.pkl",
        "load_path": "snips/intents_snips_tfidf_v7.pkl",
        "model_name": "sklearn.feature_extraction.text:TfidfVectorizer",
        "infer_method": "transform",
        "lowercase": true,
        "analyzer": "char",
        "ngram_range": [1, 5],
        "max_features": 10000,
        "norm": null
      },
      {
        "in": ["x_vec"],
        "out": ["y_pred_probas"],
        "fit_on": ["x_vec", "y_ids"],
        "name": "sklearn_component",
        "main": true,
        "save_path": "snips/intents_snips_v7.pkl",
        "load_path": "snips/intents_snips_v7.pkl",
        "model_name": "sklearn.svm:SVC",
        "infer_method": "predict",
        "warm_start": false
      },
      {
        "in": "y_pred_probas",
        "out": "y_pred_labels",
        "ref": "classes_vocab"
      }
    ],
    "out": ["y_pred_labels"]
  },
  "train": {
    "metrics": ["simple_f1_macro", "simple_f1_weighted"],
    "show_examples": false,
    "validate_best": true,
    "test_best": false
  },
  "metadata": {
    "requirements": [
      "../dp_requirements/tf.txt",
      "../dp_requirements/fasttext.txt"
    ]
  }
}