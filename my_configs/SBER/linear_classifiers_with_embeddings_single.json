{
  "dataset_reader": {
    "name": "basic_classification_reader",
    "data_path": "rb_0927",
    "x": "Text",
    "y": "theme",
    "train": "rb_0927.csv"
  },
  "dataset_iterator": {
    "name": "basic_classification_iterator",
    "seed": 42,
    "field_to_split": "train",
    "split_fields": ["train", "valid"],
    "split_proportions": [0.8, 0.2]
  },
  "chainer": {
    "in": ["x"],
    "in_y": ["y"],
    "pipe": [
      {
        "id": "classes_vocab",
        "name": "simple_vocab",
        "fit_on": ["y"],
        "level": "token",
        "save_path": "vocabs/sber_classes.dict",
        "load_path": "vocabs/sber_classes.dict",
        "in": "y",
        "out": "y_ids"
      },
      {
        "in": ["x"],
        "name": "ru_tokenizer",
        "out": ["x_tok"],
        "component_name": "Ru tokenizer"
      },
      {
        "in": ["x_tok"],
        "out": "x_vec",
        "name": "fasttext",
        "component_name": "Fasttext_300",
        "dim": 300,
        "cache": true,
        "save_path": "embeddings/ft_native_300_ru_wiki_lenta_nltk_word_tokenize.bin",
        "load_path": "embeddings/ft_native_300_ru_wiki_lenta_nltk_word_tokenize.bin"
      },
      {
        "in": "x_vec",
        "out": "avr_x",
        "name": "avr_emb",
        "component_name": "Simple_avr"
      },
      {
        "in": ["avr_x"],
        "out": ["y_pred_probas"],
        "fit_on": ["avr_x", "y_ids"],
        "name": "sklearn_component",
        "main": true,
        "save_path": "snips/intents_snips_v7.pkl",
        "load_path": "snips/intents_snips_v7.pkl",
        "model_name": "sklearn.svm:SVC",
        "infer_method": "predict",
        "warm_start": false
      },
      {
        "in": "y_pred_probas",
        "out": "y_pred_labels",
        "ref": "classes_vocab"
      }
    ],
    "out": ["y_pred_labels"]
  },
  "train": {
    "metrics": [
      "simple_accuracy",
      "simple_f1_macro",
      "simple_f1_weighted"
    ],
    "show_examples": false,
    "validate_best": true,
    "test_best": false
  }
}