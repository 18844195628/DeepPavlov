{
  "dataset_reader": {
    "name": "basic_classification_reader",
    "data_path": "rb_0927",
    "x": "Text",
    "y": "theme",
    "train": "rb_0927.csv"
  },
  "dataset_iterator": {
    "name": "basic_classification_iterator",
    "seed": 42,
    "field_to_split": "train",
    "split_fields": ["train", "valid"],
    "split_proportions": [0.8, 0.2]
  },
  "chainer": {
    "in": ["x"],
    "in_y": ["y"],
    "pipe": [
      {
        "in": "y",
        "out": "y_ids",
        "fit_on": ["y"],
        "name": "simple_vocab",
        "component_name": "Vocab of classes",
        "id": "classes_vocab",
        "level": "token",
        "save_path": "vocabs/sber_classes.dict",
        "load_path": "vocabs/sber_classes.dict"
      },
      {
        "in": ["x"],
        "name": "ru_tokenizer",
        "out": ["x_tok"],
        "component_name": "Ru tokenizer"
      },
      {
        "in": "x_tok",
        "out": "x_vec",
        "name": "fasttext",
        "id": "embedder",
        "component_name": "Fasttext_300",
        "cache": true,
        "save_path": "embeddings/ft_native_300_ru_wiki_lenta_nltk_word_tokenize.bin",
        "load_path": "embeddings/ft_native_300_ru_wiki_lenta_nltk_word_tokenize.bin",
        "dim": 300
      },
      {
        "in": "y_ids",
        "out": "y_onehot",
        "name": "one_hotter",
        "component_name": "One_hotter",
        "depth": "#classes_vocab.len"
      },
      {
        "in": ["x_vec"],
        "in_y": ["y_onehot"],
        "out": ["y_pred_probas"],
        "main": true,
        "name": "keras_classification_model_prob",
        "component_name": "CNN",
        "save_path": "new_sber/checkpoints/cnn",
        "classes": "#classes_vocab.keys()",
        "embedding_size": "#embedder.dim",
        "loss": "categorical_crossentropy",
        "optimizer": "Adam",
        "confident_threshold": 1.0,
        "lear_rate": 0.002,
        "lear_rate_decay": 0.0,
        "text_size": 20,
        "model_name": "cnn_model",
        "kernel_sizes_cnn": [3, 3, 3],
        "filters_cnn":  256,
        "coef_reg_cnn": 0.0003,
        "coef_reg_den": 0.00049,
        "dropout_rate": 0.2,
        "dense_size": 256
      },
      {
        "in": "y_pred_probas",
        "out": "y_pred_ids",
        "name": "proba2labels",
        "max_proba": true
      },
      {
        "in": "y_pred_ids",
        "out": "y_pred_labels",
        "ref": "classes_vocab"
      }
    ],
    "out": ["y_pred_labels"]
  },
  "train": {
    "epochs": 50,
    "batch_size": 32,
    "metrics": ["simple_f1_macro"],
    "validation_patience": 5,
    "val_every_n_epochs": 20,
    "log_every_n_epochs": 5,
    "show_examples": false,
    "validate_best": true,
    "test_best": false
  },
  "metadata": {
    "requirements": [
      "../dp_requirements/tf.txt",
      "../dp_requirements/fasttext.txt",
      "../dp_requirements/elmo.txt"
    ]
  }
}
